---
import { Filters } from "@components/Filters";
import { Search } from "@components/Search";

const search = Astro.url.searchParams.get('search');

---

<div class="navbar bg-base-200 " >
  <div class="flex-1">
    <a class="btn btn-ghost normal-case text-xl" href="/">Bettools</a>
  </div>
  <div class="flex-none gap-2">
    
    <div class="form-control">
      <Search term={search} client:load/>
    </div>
    
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">
          <img src="https://media-4.api-sports.io/football/teams/133.png" />
        </div>
      </label>
      <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
        <li>
          <a class="justify-between">
            Perfil
            <span class="badge">Novo</span>
          </a>
        </li>
        <li><a>Configurações</a></li>
        <li><a>Sair</a></li>
      </ul>
    </div>
  </div>
</div>
</nav>
<main class="p-1 w-full max-w-5xl mx-auto ">
  <div class="grow flex max-sm:flex-col items-stretch gap-3 p-2 max-sm:mt-0 mt-3  ">
    <Filters url={Astro.url} client:load />
    <div class="grow" >
      <slot />
    </div>
  </div>

</main>